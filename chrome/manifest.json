{
  "manifest_version": 2,

  "name": "Facebook Unclutter",
  "description": "This extension clear unnecessary advertisements from facebook.",
  "version": "1.3.1",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "https://*/*"
  ],
  
  "content_scripts" : [{
	"matches" : ["https://www.facebook.com/*", "http://www.facebook.com/*"],
	"js" : ["facebookunclutter.js"]
  }]
}
